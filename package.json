{
	"name": "kalakriti",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"analyze": "bunx vite-bundle-visualizer ",
		"build": "vite build",
		"clean": "rm -rf node_modules bun.lock dist",
		"db:clean": "env-cmd -f .env.local -- docker volume rm -f kalakriti_pgdata && rm -rf \"${ZERO_REPLICA_FILE:-/dev/null}\"*",
		"db:down": "docker compose --env-file .env.local -p kalakriti -f docker/docker-compose.yml down",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "env-cmd -f .env.local -- drizzle-kit migrate",
		"db:migrate:staging": "env-cmd -f .env.staging -- drizzle-kit migrate",
		"db:push": "env-cmd -f .env.local -- drizzle-kit push",
		"db:push:staging": "env-cmd -f .env.staging -- drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:up": "docker compose -p kalakriti -f docker/docker-compose.yml up -d --remove-orphans",
		"dev": "concurrently --kill-others \"bun zero-cache\" \"bun dev:api\" \"bun dev:app\"",
		"dev:api": "bun run --hot api/index.ts",
		"dev:app": "env-cmd -f .env.local -- vite --open",
		"format": "prettier -uw --cache .",
		"preinstall": "npx only-allow bun",
		"knip": "bunx --bun knip",
		"lint": "concurrently \"bun run-eslint\" \"bun run-stylelint\"",
		"preview": "concurrently --kill-others \"bun zero-cache\" \"vite preview --open\" \"bun run api/index.ts\"",
		"run-eslint": "eslint --cache --fix .",
		"run-stylelint": "stylelint --cache --fix --ignore-path .gitignore **/*.css",
		"shadcn": "bunx shadcn@canary add",
		"staging": "env-cmd -f .env.staging -- vite --open",
		"update-packages": "bunx taze -I --recursive",
		"zero-cache": "env-cmd -f .env.local -- zero-cache-dev -p src/db/schema.zero.ts --log-level debug",
		"zero-deploy": "env-cmd -f .env.staging --zero-deploy-permissions -p src/db/schema.zero.ts"
	},
	"lint-staged": {
		"package.json": "bunx sort-package-json",
		"*": "prettier -uw --cache",
		"*.css": "stylelint --cache --fix --ignore-path .gitignore",
		"*.{ts,tsx}": [
			"eslint --cache --fix"
		]
	},
	"resolutions": {
		"sharp": "0.32.6",
		"sharp-ico": "0.1.5"
	},
	"dependencies": {
		"@autoform/react": "^3.0.0",
		"@autoform/zod": "^2.1.0",
		"@clerk/backend": "^1.25.8",
		"@clerk/clerk-react": "^5.25.5",
		"@hono/clerk-auth": "^2.0.0",
		"@hookform/resolvers": "^4.1.3",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-label": "^2.1.2",
		"@radix-ui/react-popover": "^1.1.6",
		"@radix-ui/react-select": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slider": "^1.2.3",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-switch": "^1.1.3",
		"@radix-ui/react-tabs": "^1.1.3",
		"@radix-ui/react-toggle": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@rocicorp/zero": "^0.17.2025031904",
		"@tanstack/react-table": "8.21.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"drizzle-kit": "^0.30.6",
		"drizzle-orm": "^0.41.0",
		"drizzle-zero": "^0.5.4",
		"hono": "^4.7.5",
		"lodash": "^4.17.21",
		"lucide-react": "^0.485.0",
		"react": "^19.0.0",
		"react-day-picker": "8.10.1",
		"react-dom": "^19.0.0",
		"react-error-boundary": "^5.0.0",
		"react-hook-form": "^7.54.2",
		"react-router": "^7.4.0",
		"sonner": "^2.0.2",
		"tailwind-merge": "^3.0.2",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@clerk/types": "^4.50.1",
		"@eslint/js": "^9.23.0",
		"@nabla/vite-plugin-eslint": "^2.0.5",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.17",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/bun": "^1.2.8",
		"@types/lodash": "^4.17.16",
		"@types/node": "^22.13.14",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@vite-pwa/assets-generator": "^0.2.6",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.21",
		"babel-plugin-react-compiler": "^19.0.0-beta-aeaed83-20250323",
		"concurrently": "^9.1.2",
		"env-cmd": "^10.1.0",
		"eslint": "^9.23.0",
		"eslint-plugin-lodash": "^8.0.0",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-compiler": "^19.0.0-beta-aeaed83-20250323",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"lint-staged": "^15.5.0",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"stylelint": "^16.17.0",
		"stylelint-config-standard": "^37.0.0",
		"tailwindcss": "^4.0.17",
		"typescript": "~5.8.2",
		"typescript-eslint": "^8.28.0",
		"vite": "^6.2.3",
		"vite-plugin-pwa": "^0.21.2",
		"vite-tsconfig-paths": "^5.1.4",
		"workbox-core": "^7.3.0",
		"workbox-window": "^7.3.0"
	},
	"trustedDependencies": [
		"@clerk/shared",
		"@rocicorp/zero-sqlite3",
		"@swc/core",
		"esbuild",
		"protobufjs",
		"sharp"
	]
}
