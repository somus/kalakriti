		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.3",
		"@vite-pwa/assets-generator": "^1.0.0",
		"@vitejs/plugin-react": "^4.4.1",
		"autoprefixer": "^10.4.21",
