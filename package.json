{
	"name": "kalakriti",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc -b && vite build",
		"clean": "rm -rf node_modules bun.lock",
		"db:clean": "env-cmd -f .env.local -- docker volume rm -f kalakriti_pgdata && rm -rf \"${ZERO_REPLICA_FILE:-/dev/null}\"*",
		"db:down": "docker compose --env-file .env.local -p kalakriti -f docker/docker-compose.yml down",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:push:local": "env-cmd -f .env.local -- drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:up": "docker compose -p kalakriti -f docker/docker-compose.yml up --remove-orphans",
		"dev": "vite --open",
		"dev:local": "env-cmd -f .env.local -- vite --open",
		"preview": "vite preview --open",
		"format": "prettier -uw --cache .",
		"run-eslint": "eslint --cache --fix .",
		"run-stylelint": "stylelint --cache --fix --ignore-path .gitignore **/*.css",
		"lint": "run-p run-eslint run-stylelint",
		"update-packages": "bunx taze -I --recursive",
		"knip": "bunx --bun knip",
		"shadcn": "bunx shadcn@canary add",
		"zero-deploy": "zero-deploy-permissions -p src/db/schema.zero.ts",
		"zero-cache": "env-cmd -f .env.local -- zero-cache-dev -p src/db/schema.zero.ts --log-level debug"
	},
	"lint-staged": {
		"package.json": "bunx sort-package-json",
		"*": "prettier -uw --cache",
		"*.css": "stylelint --cache --fix --ignore-path .gitignore",
		"*.{ts,tsx}": [
			"eslint --cache --fix"
		]
	},
	"resolutions": {
		"sharp": "0.32.6",
		"sharp-ico": "0.1.5"
	},
	"dependencies": {
		"@clerk/clerk-react": "^5.25.3",
		"@radix-ui/react-avatar": "^1.1.3",
		"@radix-ui/react-collapsible": "^1.1.3",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.6",
		"@radix-ui/react-separator": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.2",
		"@radix-ui/react-tooltip": "^1.1.8",
		"@rocicorp/zero": "^0.17.2025031904",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.5",
		"drizzle-orm": "^0.41.0",
		"drizzle-zero": "^0.5.4",
		"lucide-react": "^0.484.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router": "^7.4.0",
		"sonner": "^2.0.1",
		"tailwind-merge": "^3.0.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.23.0",
		"@nabla/vite-plugin-eslint": "^2.0.5",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.17",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^22.13.13",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@vite-pwa/assets-generator": "^0.2.6",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.21",
		"babel-plugin-react-compiler": "^19.0.0-beta-aeaed83-20250323",
		"env-cmd": "^10.1.0",
		"eslint": "^9.23.0",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-compiler": "^19.0.0-beta-aeaed83-20250323",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"lint-staged": "^15.5.0",
		"npm-run-all2": "^7.0.2",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"stylelint": "^16.17.0",
		"stylelint-config-standard": "^37.0.0",
		"tailwindcss": "^4.0.17",
		"typescript": "~5.8.2",
		"typescript-eslint": "^8.28.0",
		"vite": "^6.2.3",
		"vite-plugin-pwa": "^0.21.2",
		"vite-tsconfig-paths": "^5.1.4",
		"workbox-core": "^7.3.0",
		"workbox-window": "^7.3.0"
	}
}
